        {% endblock %}

      %section#call-to-action
        .call-to-action-container
          {% block 'call_to_action' %}
          {% editable_text 'call_to_action_heading' %}
          %h3.cta-header GET YOURS FOR $99/MONTH
          {% endeditable_text %}
          {% editable_text "call_to_action_button_text" %}
          .cta-button
            %a.button{:href => "#modal"} CONTACT US
          {% endeditable_text %}
          {% endblock %}
      %section#contact
        {% block 'contact' %}
        .content
          {% editable_text 'contact_info' %}
          %h3 CONTACT INFO
          %ul
            %li 205 W PARK AVE, PHARR TX 78577
            %li HELLO@CREATETHEBRIDGE.COM
            %li 512 640 2284
            {% endeditable_text %}
            %li
              %a{:href => "//maps.google.com/?q=205 W PARK AVE, PHARR TX 78577"} Get Directions
        #map
      .remodal{"data-remodal-id" => "modal"}
        %div
          {% editable_text 'contact_form_title' %}
          %h4 Contact Us to Schedule a Tour Today!
          {% endeditable_text %}
          %form#mandrill-form
            %h5 Name
            %input#name.full-width-input{:name => "name", :placeholder => "Name", :required => "required", :type => "text"}/
            %h5 Email Address
            %input#email.full-width-input{:name => "email", :placeholder => "Email", :required => "required", :type => "email"}/
            %h5 Phone
            %input#phone.full-width-input{:name => "telephone", :placeholder => "Phone", :type => "tel"}/
            %h5 Message
            %textarea#msg.full-width-input{:name => "message", :placeholder => "Message", :required => "required", :rows => "7"}
            %input#submitbutton1.button{:style => "border: none", :type => "submit", :value => "SUBMIT"}/
        {% endblock %}
      %footer
        {% block 'footer' %}
        .footer-container
          .company
            {% editable_text 'site_title' %}
            %h4 Smart Site
            {% endeditable_text %}
            {% editable_text 'copyright' %}
            %p Â© Smart Site. All rights reserved.
            %a{:href => "http://www.createthebridge.com"} Created by Create the Bridge
            {% endeditable_text %}
          .contact
            {% editable_text 'footer_contact' %}
            %h4 Contact
            %p A great way to contact us would be by email or phone.
            {% endeditable_text %}
          .social
            {% editable_text 'social_media_title' %}
            %h4 Social
            {% endeditable_text %}
            %ul.social
              %li
                %a{:href => "https://www.facebook.com/bridgedesigngroup"}
                  %i.fa.fa-facebook-square
              %li
                %a{:href => "https://twitter.com/CreateTheBridge"}
                  %i.fa.fa-twitter-square
              %li
                %a{:href => "https://instagram.com/createthebridge/"}
                  %i.fa.fa-instagram
        {% endblock %}
