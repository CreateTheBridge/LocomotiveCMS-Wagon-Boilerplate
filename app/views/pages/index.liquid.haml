%html
  %head
    %title {{ page.seo_title }}
    %meta{:name => 'description', :content => '{{ page.meta_description }}'}
    %meta{:name => 'keywords', :content => '{{ page.meta_keywords }}'}
    %link{:href => "//smartsite.herokuapp.com/", :rel => "canonical"}/
    %meta{:charset => "utf-8"}/
    %meta{:content => "true", :name => "HandheldFriendly"}/
    %meta{:content => "320", :name => "MobileOptimized"}/
    %meta{:content => "initial-scale=1.0", :name => "viewport"}/
    %meta{:content => "apple-touch-icon-144x144-precomposed.png", :name => "msapplication-TileImage"}/
    %meta{:content => "#f5f5f5", :name => "msapplication-TileColor"}/
    %meta{:content => "yes", :name => "apple-mobile-web-app-capable"}/
    %meta{:content => "black", :name => "apple-mobile-web-app-status-bar-style"}/
    %meta{:content => "on", "http-equiv" => "cleartype"}/
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    {{ 'all.css' | stylesheet_tag }}
    {{ 'head.js' | javascript_tag }}
    %link{:href => "//cdnjs.cloudflare.com/ajax/libs/animate.css/3.2.6/animate.min.css", :rel => "stylesheet"}/
    %script{:src => "//maps.googleapis.com/maps/api/js?key=AIzaSyCWOsSfhTI_3lT02aBaQbBslPM-zIN6Ecc&sensor=true&libraries=geometry"}
  %body.index
    %main.main{:role => "main"}
      %nav.alt-top-bar-container
        %ul.links
          %li.hvr-underline-reveal
            %a{:href => "#features"} Features
          %li.hvr-underline-reveal
            %a{:href => "#gallery"} Gallery
          %li.hvr-underline-reveal
            %a{:href => "#call-to-action"} Contact
          %li.hvr-underline-reveal
            %a{:href => "#contact"} Location
        .menu-items
          %button.tcon.tcon-menu--arrow.tcon-menu--arrowup{"aria-label" => "toggle menu", :type => "button"}
            %span.tcon-menu__lines{"aria-hidden" => "true"}
            %span.tcon-visuallyhidden toggle menu
          %a{:href => "//createthebridge.com"}
            {% capture photo %}{% editable_file "logo" %}/samples/pages/bridge-icon.svg{% endeditable_file %}{% endcapture %}
            %img.logo{:src => "{{ photo }}"}/
      %nav.mobile
        %a.logo{"data-scroll" => "", :href => "#home"} Smart Site
        .nav-collapse
          %ul
            %li.menu-item.active
              %a{"data-scroll" => "", :href => "#features"} Features
            %li.menu-item
              %a{"data-scroll" => "", :href => "#gallery"} Gallery
            %li.menu-item
              %a{"data-scroll" => "", :href => "#call-to-action"} Contact
            %li.menu-item
              %a{"data-scroll" => "", :href => "#contact"} Location

      {% capture photo %}{% editable_file "header-background-image" %}/samples/pages/background.jpg{% endeditable_file %}{% endcapture %}
      %section#header{"data-stellar-background-ratio" => "0.5", "data-stellar-vertical-offset" => "-40", style: "background: url('{{ photo | resize: '1960x' }}') no-repeat center center;"}
        .header-container
          {% editable_text 'header_text' %}
          %h1 A SMARTER WEBSITE
          %h4 Tell your story with a beautiful, result driven Smart Site. Delivered in 1 week.
          {% endeditable_text %}
          %a{:href => "#"}
            %i.fa-3x.fa-angle-down

      %section#features
        {% block 'features' %}
        {% editable_text 'features_text' %}
        %h3 WHAT WE OFFER
        %p
          Templates were built with you in mind. Cut through the clutter and demonstrate the most important aspects of your business with these templates.
        {% endeditable_text %}
        .package-1.up-item
          {% capture photo %}{% editable_file "package-1-image" %}/samples/pages/business.png{% endeditable_file %}{% endcapture %}
          %img{:src => "{{ photo | resize: '150x150#' }}"}
          {% editable_text 'package_1_description' %}
          %h4
            Business
          %p
            Centered around your business.
          {% endeditable_text %}
        .package-2.up-item
          {% capture photo %}{% editable_file "package-2-image" %}/samples/pages/design.png{% endeditable_file %}{% endcapture %}
          %img{:src => "{{ photo | resize: '150x150#' }}"}
          {% editable_text 'package_2_description' %}
          %h4
            Design
          %p
            Beautiful, flawless design.
          {% endeditable_text %}
        .package-3.up-item
          {% capture photo %}{% editable_file "package-3-image" %}/samples/pages/responsive.png{% endeditable_file %}{% endcapture %}
          %img{:src => "{{ photo | resize: '150x150#' }}"}
          {% editable_text 'package_3_description' %}
          %h4
            Responsive
          %p
            Works on any device
          {% endeditable_text %}
        {% editable_text "call_to_action_button_text" %}
        .cta-button
          %a.button{:href => "#modal"} ORDER YOURS NOW
        {% endeditable_text %}
        {% endblock %}

